@model CNPM_QuanLyChuyenBay.Models.MayBay

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    h2 {
        color: #d9534f; /* Màu đỏ nổi bật cho tiêu đề */
        font-weight: bold;
    }

    h3 {
        margin-bottom: 20px;
        color: #5bc0de; /* Màu xanh nhạt */
    }

    dl.dl-horizontal {
        background-color: #f9f9f9; /* Màu nền sáng */
        border: 1px solid #ddd; /* Viền nhẹ */
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        margin-bottom: 10px;
        color: #555;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
    }

    .btn-default {
        background-color: #d9534f; /* Màu đỏ cho nút Delete */
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #c9302c;
        }

    .btn-link {
        color: #5bc0de; /* Màu xanh nhạt cho nút Back */
        text-decoration: none;
    }

        .btn-link:hover {
            color: #337ab7;
            text-decoration: underline;
        }
</style>

<h2>Xóa máy bay</h2>

<h3>Bạn có chắc chắn muốn xóa mục này?</h3>
<div>
    <h4>Thông tin máy bay</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaMayBay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaMayBay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenMayBay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenMayBay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SucChuaToiDa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SucChuaToiDa)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-link" })
        </div>
    }
</div>
