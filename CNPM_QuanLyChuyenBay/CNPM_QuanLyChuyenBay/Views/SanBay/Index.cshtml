@model IEnumerable<CNPM_QuanLyChuyenBay.Models.SanBay>

@{
    ViewBag.Title = "Danh sách sân bay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Danh sách sân bay</h2>

<!-- Thêm CSS để tạo kiểu cho bảng -->
<style>
    .table-container {
        max-width: 100%;
        overflow-x: auto;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .table-action-links {
        text-align: center;
        margin-top: 10px;
    }

    .btn-link {
        font-weight: bold;
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>

<div class="table-container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaSanBay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenSanBay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenThanhPho)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VietTatSanBay)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSanBay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanBay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenThanhPho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VietTatSanBay)
                    </td>
                    <td class="table-action-links">
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaSanBay }, new { @class = "btn-link" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaSanBay }, new { @class = "btn-link" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaSanBay }, new { @class = "btn-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
