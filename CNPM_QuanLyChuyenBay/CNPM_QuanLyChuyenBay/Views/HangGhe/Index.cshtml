@model IEnumerable<CNPM_QuanLyChuyenBay.Models.HangGhe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Danh Sách Hạng Ghế</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>

<!-- Thêm CSS để tạo giao diện đẹp cho bảng -->
<style>
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        background-color: #f9f9f9;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .btn {
        margin: 5px 0;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-link:hover {
            text-decoration: underline;
        }
</style>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHangGhe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenHangGhe)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHangGhe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHangGhe)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaHangGhe }, new { @class = "btn-link" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaHangGhe }, new { @class = "btn-link" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaHangGhe }, new { @class = "btn-link" })
                </td>
            </tr>
        }
    </tbody>
</table>
