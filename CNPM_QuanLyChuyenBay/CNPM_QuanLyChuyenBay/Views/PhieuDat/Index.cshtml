@model IEnumerable<CNPM_QuanLyChuyenBay.Models.PhieuDat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    /* Custom styles for the Index page */
    h2 {
        color: #28a745;
        font-weight: bold;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td {
            background-color: #f9f9f9;
        }

        .table tr:nth-child(even) td {
            background-color: #f1f1f1;
        }

        .table td a {
            color: #007bff;
            text-decoration: none;
            padding: 5px 10px;
            border-radius: 3px;
        }

            .table td a:hover {
                background-color: #007bff;
                color: white;
            }

            .table td a:active {
                background-color: #0056b3;
            }

        .table .btn {
            padding: 8px 16px;
            margin: 5px;
            text-decoration: none;
            border-radius: 5px;
        }

        .table .btn-primary {
            background-color: #28a745;
            color: white;
        }

            .table .btn-primary:hover {
                background-color: #218838;
            }

        .table .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .table .btn-danger:hover {
                background-color: #c82333;
            }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaPhieuDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKhachHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaBooking)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhieuDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhachHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaBooking)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaPhieuDat }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaPhieuDat }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaPhieuDat }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
