@model CNPM_QuanLyChuyenBay.Models.HanhKhach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    h2, h3 {
        color: #dc3545; /* Màu đỏ để thể hiện cảnh báo */
        text-align: center;
        margin-bottom: 20px;
    }

    .dl-horizontal {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .dl-horizontal dt {
            font-weight: bold;
            color: #343a40;
        }

        .dl-horizontal dd {
            margin-left: 20px;
            color: #495057;
        }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-default {
        background-color: #dc3545; /* Màu đỏ để nhấn mạnh */
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #c82333;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container">
    <h3>Bạn có chắc chắn muốn xóa hành khách này không?</h3>
    <div>
        <h4>HanhKhach</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.MaHanhKhach)</dt>
            <dd>@Html.DisplayFor(model => model.MaHanhKhach)</dd>

            <dt>@Html.DisplayNameFor(model => model.HoTen)</dt>
            <dd>@Html.DisplayFor(model => model.HoTen)</dd>

            <dt>@Html.DisplayNameFor(model => model.DiaChi)</dt>
            <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

            <dt>@Html.DisplayNameFor(model => model.GioiTinh)</dt>
            <dd>@Html.DisplayFor(model => model.GioiTinh)</dd>

            <dt>@Html.DisplayNameFor(model => model.QuocTich)</dt>
            <dd>@Html.DisplayFor(model => model.QuocTich)</dd>

            <dt>@Html.DisplayNameFor(model => model.NgaySinh)</dt>
            <dd>@Html.DisplayFor(model => model.NgaySinh)</dd>

            <dt>@Html.DisplayNameFor(model => model.SoDienThoai)</dt>
            <dd>@Html.DisplayFor(model => model.SoDienThoai)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.CCCD_Passport)</dt>
            <dd>@Html.DisplayFor(model => model.CCCD_Passport)</dd>

            <dt>@Html.DisplayNameFor(model => model.MaKhachHang)</dt>
            <dd>@Html.DisplayFor(model => model.MaKhachHang)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-default" />
                <span> | </span>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

